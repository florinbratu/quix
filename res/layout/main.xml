<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <view xmlns:android="http://schemas.android.com/apk/res/android" 
		class = "com.killerappzz.spider.rendering.CanvasSurfaceView"
		android:id="@+id/glsurfaceview"
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent"
	/>
	
   <!-- the Pause menu -->  
    <LinearLayout
    		android:id="@+id/pausedMenu"
	     	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical" 
			android:layout_gravity="center"
	     	android:visibility="gone">
	     	
	    <TextView  
	    	android:id="@+id/pausedMenuText"
            android:layout_height="wrap_content" 
          	android:layout_width="wrap_content" 
          	android:layout_gravity="center"  
            android:text="PAUSED"
            android:textColor="#ffffff"
	        android:textSize="32dp"
	        android:shadowColor="#000000"  
        	android:shadowRadius="2"  
        	android:shadowDx="1"  
        	android:shadowDy="1"   
            />  
	    
	    <Button
	        android:id="@+id/pause_resumeButton"
	        android:text="Resume"
	        android:textSize="18dp"
	        android:shadowColor="#347C17"  
        	android:shadowRadius="1.5"  
        	android:shadowDx="1"  
        	android:shadowDy="1"  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:background="@layout/mainmenu_item" />
	    
	    <Button
	        android:id="@+id/pause_restartButton"
	        android:text="Restart"
	        android:textSize="18dp"
	        android:shadowColor="#347C17"  
        	android:shadowRadius="1.5"  
        	android:shadowDx="1"  
        	android:shadowDy="1"  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:paddingTop="10dp"
	        android:background="@layout/mainmenu_item" />
	        
	    <Button
	        android:id="@+id/pause_optionsButton"
	        android:text="Options"
	        android:textSize="18dp"
	        android:shadowColor="#347C17"  
        	android:shadowRadius="1.5"  
        	android:shadowDx="1"  
        	android:shadowDy="1"  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:paddingTop="10dp"
	        android:background="@layout/mainmenu_item" />
	    
	    <Button
	        android:id="@+id/pause_quitButton"
	        android:text="Exit"
	        android:textSize="18dp"
	        android:shadowColor="#347C17"  
        	android:shadowRadius="1.5"  
        	android:shadowDx="1"  
        	android:shadowDy="1"  
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:paddingTop="10dp"
	        android:background="@layout/mainmenu_item" />     
	 </LinearLayout>
     
</FrameLayout>
